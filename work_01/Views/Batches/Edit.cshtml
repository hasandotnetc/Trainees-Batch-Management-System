@model work_01.Models.Batch

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Batch</h1>

<div class="row">
    <div class="col">
        <form asp-action="Edit" asp-controller="Batches">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BatchId" />
            <div class="row mb-2">
                <label class="col-form-label col-2">BatchCode</label>
                <div class="col-8">
                    <input type="text" class="form-control form-control-sm" asp-for="BatchCode" />
                </div>
                <div class="col-10 offset-2">
                    <input type="submit" value="Save" class="btn btn-success mt-2" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

